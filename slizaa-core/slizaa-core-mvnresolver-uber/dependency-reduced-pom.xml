<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <parent>
    <artifactId>slizaa-parent</artifactId>
    <groupId>io.codekontor.slizaa</groupId>
    <version>1.0.0-SNAPSHOT</version>
    <relativePath>../../slizaa-poms/slizaa-parent/pom.xml</relativePath>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <artifactId>slizaa-core-mvnresolver-uber</artifactId>
  <build>
    <plugins>
      <plugin>
        <groupId>io.codekontor.slizaa.mojos</groupId>
        <artifactId>copydependencies-maven-plugin</artifactId>
        <version>${project.version}</version>
        <executions>
          <execution>
            <id>copyDependencies</id>
            <goals>
              <goal>copyDependencies</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <targetDirectory>target/classes/libs</targetDirectory>
          <coords>
            <coord>io.codekontor.slizaa:slizaa-core-mvnresolver-implementation:1.0.0-SNAPSHOT</coord>
            <coord>org.slf4j:slf4j-nop:1.7.25</coord>
            <coord>org.slf4j:slf4j-api:1.7.25</coord>
          </coords>
          <excludeArtifactIds>slizaa-core-mvnresolver-api,guava</excludeArtifactIds>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>3.2.0</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <artifactSet>
                <includes>
                  <include>io.codekontor.slizaa.core:io.codekontor.slizaa.core.mvnresolver.api</include>
                  <include>org.slf4j:*</include>
                </includes>
              </artifactSet>
              <relocations>
                <relocation>
                  <pattern>org.slf4j</pattern>
                  <shadedPattern>io.codekontor.slizaa.core.mvnresolver.org.slf4j</shadedPattern>
                </relocation>
              </relocations>
            </configuration>
          </execution>
        </executions>
        <configuration />
      </plugin>
      <plugin>
        <groupId>biz.aQute.bnd</groupId>
        <artifactId>bnd-maven-plugin</artifactId>
        <executions>
          <execution>
            <goals>
              <goal>bnd-process</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <artifactId>maven-jar-plugin</artifactId>
        <configuration>
          <archive>
            <manifestFile>${project.build.outputDirectory}/META-INF/MANIFEST.MF</manifestFile>
          </archive>
        </configuration>
      </plugin>
    </plugins>
  </build>
  <dependencies>
    <dependency>
      <groupId>io.codekontor.slizaa</groupId>
      <artifactId>slizaa-core-mvnresolver-api</artifactId>
      <version>1.0.0-SNAPSHOT</version>
      <scope>compile</scope>
    </dependency>
    <dependency>
      <groupId>com.google.guava</groupId>
      <artifactId>guava</artifactId>
      <version>21.0</version>
      <scope>compile</scope>
    </dependency>
  </dependencies>
</project>
